{
  "name": "astro-component-tester",
  "description": "Utility to test Astro components",
  "version": "0.5.2",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "author": "Princesseuh",
  "license": "MIT",
  "scripts": {
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --target es5 --outDir dist/cjs && npm run replace-cjs:dirname",
    "build": "npm run build:esm && npm run build:cjs",
    "replace-cjs:dirname": "replace-in-file ./dist/cjs/**  --configFile=./scripts/replace-in-files-dirname.cjs",
    "dev": "tsc --watch",
    "format": "prettier -w .",
    "lint": "eslint . --ext .ts,.js",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "astro": "^1.0.0-rc.1"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.5",
    "@types/node": "^18.6.2",
    "@types/prettier": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "astro": ">=1.0.0-rc.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "replace-in-file": "^6.3.5",
    "typescript": "^4.7.4"
  }
}
